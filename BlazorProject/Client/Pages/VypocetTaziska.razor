@code {

    private double xT;
    private double yT;

    public COGCalculationModel COGCalculationModel = new COGCalculationModel();

    private void CalculateX()
    {
        xT = COGCalculationModel.RearWheelBaseWeight / COGCalculationModel.CarWeight * COGCalculationModel.WheelBase;
    }

    private void CalculateY()
    {
        yT = COGCalculationModel.RightSideWeight / COGCalculationModel.CarWeight2 * COGCalculationModel.Track;
    }
}
