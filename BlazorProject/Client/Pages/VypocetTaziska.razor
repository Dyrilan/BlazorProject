    <div class="COGCalculationForm">
        <h4>Vypocet Taziska osi Y</h4>
        <img src="/Assets/CarY.png" class="img-responsive" />

        <EditForm Model="@COGCalculationModel" OnValidSubmit="@CalculateY">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div>
                <label> hmostnost pravej strany vozidla (kg): </label>
                <InputNumber id="rearWheelBaseWeight" @bind-Value="COGCalculationModel.RightSideWeight" />
            </div>
            <div>
                <label> celkova hmotnost vozidla (kg): </label>
                <InputNumber id="carWeight" @bind-Value="COGCalculationModel.CarWeight2" />
            </div>
            <div>
                <label> sirka napravy (m): </label>
                <InputNumber id="wheelBase" @bind-Value="COGCalculationModel.Track" />
            </div>

            <button style="margin-bottom: 5px" type="submit">Submit</button>
        </EditForm>

        <div>
            <p>Tazisko na osi Y: @yT</p>
        </div>
    </div>

