        <h4>Vypocet Taziska osi X</h4>
        <img src="/Assets/CarX.png" class="img-responsive" />

        <EditForm Model="@COGCalculationModel" OnValidSubmit="@CalculateX">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div>
                <label> hmostnost zadej napravy (kg): </label>
                <InputNumber id="rearWheelBaseWeight" @bind-Value="COGCalculationModel.RearWheelBaseWeight" />
            </div>
            <div>
                <label> celkova hmotnost vozidla (kg): </label>
                <InputNumber id="carWeight" @bind-Value="COGCalculationModel.CarWeight" />
            </div>
            <div>
                <label> vzdialenost naprav (m): </label>
                <InputNumber id="wheelBase" @bind-Value="COGCalculationModel.WheelBase" />
            </div>

